// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id          String @id @default(cuid())
  name        String
  description String
  members     User[]
  tasks       Task[]
}

model User {
  id             String    @id @default(cuid())
  name           String
  email          String
  profilePicture String?
  clubs          Club[]
  projects       Project[]
  github         String?
  website        String?
}

model Project {
  id          String  @id @default(cuid())
  user        User    @relation(fields: [userId], references: [id])
  userId      String
  name        String
  description String
  link        String
  task        Task?   @relation(fields: [taskId], references: [id])
  taskId      String?
}

model Task {
  id          String    @id @default(cuid())
  name        String
  description String
  projects    Project[]
  Club        Club?     @relation(fields: [clubId], references: [id])
  clubId      String?
}
